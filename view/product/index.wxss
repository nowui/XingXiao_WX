.product-info {
    background-color: #ffffff;
    border-top: 1rpx solid #D9D9D9;
    border-bottom: 1rpx solid #D9D9D9;
    padding: 5px 0px 5px 10px;
}
.product-info-name {
    font-size: 16px;
    font-weight: bold;
}
.product-info-price {
    color: #c81623;
    font-size: 16px;
    margin-left: -2px;
}
.footer-total {
  float: left;
  width: 70%;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  background-color: #fff;
}

.footer-total-checkbox {
  position: absolute;
  width: 50px;
  height: 50px;
  text-align: center;
}

.footer-total-text {
  margin-left: 10px;
}

.footer-pay {
  float: left;
  width: 30%;
  height: 50px;
  line-height: 50px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  background-color: #c81623;
}